---
const { post2 } = Astro.props;
import EtiquetaD from './etiqueta diseño.astro'
import EtiquetaD2 from './etiqueta diseño2.astro'
---

<a href={post2.url} class="Conten" title={post2.title}>
    <div class="frame">
      <img src={post2.imagenUrl} alt={post2.imagenAlt} title={post2.imagenTitulo} loading="lazy" />
    </div>
    <div class="tex">
      <h3>{post2.proyecto}</h3>
      <p class="prodes">{post2.proyectodes}</p>
      <div class="eti">
        <p class="etiqueta"><EtiquetaD /></p>
        <p class="etiqueta2"><EtiquetaD2 /></p>
        <img class="Flecha" src="/Assets/Unión 1.svg" alt="Flecha" loading="lazy">
      </div>
    </div>
  </a>
  <hr />
  
  <style class="Que1">
    @media (max-width: 1025px) {}
    @media (max-width: 881px) {}
    @media (max-width: 768px) {
      .Conten {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
      }
      .Conten .frame {
          width: 17em;
          height: 17em;
          padding: 0rem;
        }
    
        .frame img {
          width: 15em;
          height: 14.5em;
          border-radius: 15px;
        }
    
        h3 {
          font-weight: 600;
          font-size: 1.5rem;
          padding-right: 0px;
          text-align: center;
        }
      
        p {
          font-size: 0.8rem;
          max-width: 320px;
          text-align: center;
        }
        .etiqueta,
        .etiqueta2 {
          margin: 0 auto;
        }
        .eti {
        text-align: center;
        margin: 0 auto;
        padding-top: 30px;
      }
      
        hr {
          max-width: 20em;
          margin: 0 auto;
          margin-top: 4em;
          margin-bottom: 4em;
        }
    
    .etiqueta2 {
        margin-right: 1em;
    }
    .Conten .Flecha {
      display: none;
    }
    }
    </style>

  <style class="text">
    @font-face {
        font-family: 'Raleway-ExtraBold' ;
        src: url('../Assets/Raleway-ExtraBold.ttf');}
		@font-face {
        font-family: "Raleway-Regular";
        src: url('../Assets/Raleway-Regular.ttf');}
    .Conten .frame {
      max-width: 17em;
      min-height: 15em;
      border: solid 1px #434343;
      background-color: #1e1e20;
      border-radius: 15px;
      padding: 1rem;
      
    }
    .frame img {
      border: solid 1px #434343;
      background-color: #1e1e20;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
      max-width: 15em;
      min-height: 15em;
      border-radius: 15px;
      transition: all 0.3s ease-in-out;
    }
    .frame img:hover {
      transform: scale(95%);
    }
    h3 {
      color: white;
      font-family: Raleway-Regular;
      font-weight: 600;
      font-size: 2.5rem;
      padding-right: 20px;
    }
  
    p {
      color: white;
      font-family: Raleway-Regular;
      max-width: 350px;
    }
  
    hr {
      max-width: 50em;
      margin: 0 auto;
      margin-top: 4em;
      margin-bottom: 4em;
      border-color: #434343;
    }

.etiqueta2 {
    margin-right: 1.5em;
}
</style>
 
 <style class="config">
    .Conten {
    margin: 0 auto;
    max-width: 50em;
    gap: 4em;
        }
    .Conten {
    display: flex;
  }
  .Conten .frame {
  display: flex;
  justify-content: center;
  align-items: center;
  max-width: 17em;
  min-height: 15em;
  border: solid 1px #434343;
  background-color: #1e1e20;
  border-radius: 15px;
  padding: 1rem;
  transition: all 0.3s ease-in-out;
}

  .tex {
    display: flex;
    flex-direction: column;
    text-align: left;
    justify-content: center;
  }
  .eti {
    display: flex;
    margin-top: 2em;
  }
  .eti img {
  position: relative;
  left: 30%;
  bottom: 150%;
  max-width: 4em;
  max-height: 4em;
  transition: all 0.3s ease-in-out;
  animation: all 0.3s ease-in-out;
}

.Conten .frame:hover {
  border: solid 1px #405FA7;
}

.Conten:hover img {
animation-name:desplaza;
animation-fill-mode: forwards;}

.Conten:not(:hover) img {
animation-name:regresa;
animation-fill-mode: forwards;}

@keyframes desplaza {
  0% {
    left: 30%;
    bottom: 150%;
  }
  100% {
    left: 35%;
    bottom: 150%;
  }
}
@keyframes regresa{
  0% {
    left: 35%;
    bottom: 150%;
  }
  100% {
    left: 30%;
    bottom: 150%;
  }
}
  </style>