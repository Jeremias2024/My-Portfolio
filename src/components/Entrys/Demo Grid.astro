---
const { demo } = Astro.props;
---

<div class="Marco"> 

    <div class="Izq1">
        <p class="Comtiq">{demo.comentario1}</p>
        <p class="Comin">{demo.comentarioin1}</p>
    </div>
    <div class="Izq2">
        <img src={demo.imagenUrl1} alt={demo.imagenAlt1} title={demo.imagenTitulo1} loading="lazy"/>
    </div>
    <div class="Izq3">
        <img src={demo.imagenUrl2} alt={demo.imagenAlt2} title={demo.imagenTitulo2} loading="lazy"/>
    </div>
    <div class="Izq4">
        <p class="Comtiq">{demo.comentario2}</p>
        <p class="Comin">{demo.comentarioin2}</p>
    </div>
    <div class="Der">
        <img src={demo.imagenUrl3} alt={demo.imagenAlt3} title={demo.imagenTitulo3} loading="lazy"/>
    </div>
    
</div>

<style class="Media">
@media (max-width: 768px) {
.Marco {
    margin-top: 5em;
    margin-bottom: 5em;
    max-width: 28rem;
    height: 100em;
    grid-template-columns: 1fr;
    grid-template-rows: auto auto auto;
    grid-gap: 15px;
}

.Marco div {
    border-radius: 20px;
}
.Der {
    grid-column: 1 / -1;
    grid-row: 1;
}
.Izq1 {
    grid-column: 1 / -1;
    grid-row: 2;
}
.Izq2 {
    grid-column: 1 / -1;
    grid-row: 3;
}

.Izq3 {
    grid-column: 1 / -1;
    grid-row: 5;
}

.Izq4 {
    grid-column: 1 / -1;
    grid-row: 4;
}
.Der img {
    width: 400px;
    height: 500px;
}
.Izq1 p{
    text-align: center;
}
.Izq2 img {
    width: 320px;
    height: 220px;
}
.Izq3 img{
    width: 320px;
    height: 220px;
}
.Izq4 p {
    text-align: center;
}

.Comtiq {
font-size: 0.9em;
max-width:11rem;
padding: 7px;
margin: 0 auto;
margin-top: 1.5em;
margin-bottom: 0.5em;
}
.Comin {
font-size: 0.9em;
max-width: 16em;
margin: 0 auto;
}
}
</style>

<style>
@font-face {
        font-family: 'Raleway-ExtraBold' ;
        src: url('../Assets/Raleway-ExtraBold.ttf');}
@font-face {
        font-family: "Raleway-Regular";
        src: url('../Assets/Raleway-Regular.ttf');}
    .Der img {
        width: 400px;
        height: 500px;
        object-fit:cover;
        border-radius: 20px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
        border: solid 1px #434343;
        transition: all 0.3s ease-in-out;
    }
    .Izq1 p{
        text-align: left;
    }
    .Izq2 img {
        width: 270px;
        height: 245px;
        object-fit: cover;
        border-radius: 20px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
        border: solid 1px #434343;
        transition: all 0.3s ease-in-out;
    }
    .Izq3 img{
        width: 270px;
        height: 250px;
        object-fit: cover;
        border-radius: 20px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
        border: solid 1px #434343;
        transition: all 0.3s ease-in-out;
    }
    .Izq4 p {
        text-align: left;
    }

.Comtiq {
display: flex;
justify-content: center;
font-family: Raleway-Regular;
font-size: 0.9em;
font-weight: 700;
max-width:11rem;
color: #A5A5A5;
border: solid 1px #434343;
background-color: #1e1e20;
padding: 7px;
margin: 1em;
border-radius: 9px;
box-shadow: inset 0px 0px 5px rgba(0, 0, 0, 0.5);
}
.Comin {
font-family: Raleway-Regular;
font-size: 0.9em;
max-width: 16em;
color: white;
margin-left: 1em;
margin-top: -0.3em;
}
</style>

<style>
    .Marco {
        display: grid;
        margin: 0 auto;
        margin-top: 5em;
        margin-bottom: 5em;
        max-width: 66.5rem;
        height: 550px;
        grid-template-columns: repeat(7, 1fr);
        grid-auto-rows: minmax(100px, auto);
        grid-gap: 15px;
    }

    .Marco div {
        background-color: #1E1E20;
        border: 1px solid #434343;
        border-radius: 20px;
        box-shadow: inset 0px 0px 10px rgba(0, 0, 0, 0.3);
        transition: 0.3s ease-in-out;
    }
    .Marco div:hover {
        border: solid 1px #405FA7;
    }
    .Der {
        display: flex;
        justify-content: center;
        place-items: center;
        grid-column:5/8;
        grid-row:1/3;
    }
    .Izq1 {
        grid-column:1/3;
    }
    .Izq2 {
        display: flex;
        justify-content: center;
        place-items: center;
        grid-column:3/5;
    }

    .Izq3 {
        display: flex;
        justify-content: center;
        place-items: center;
        grid-column:1/3;
    }

    .Izq4 {
        grid-column:3/5;
    }
</style>