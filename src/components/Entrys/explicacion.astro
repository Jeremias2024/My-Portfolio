---
const { exp } = Astro.props;
---

<div class="contenedor">

    <p class="eti">{exp.eti}</p>
    <p class="expli">{exp.expli}</p>

</div>

<style class="Que">
@media (max-width: 768px) {
    .expli {
    font-size: 1rem;
    max-width: 20em;
    margin: 0 auto;
}
}
</style>


<style>
@font-face {
        font-family: 'Raleway-ExtraBold' ;
        src: url('../Assets/Raleway-ExtraBold.ttf');}
		@font-face {
        font-family: "Raleway-Regular";
        src: url('../Assets/Raleway-Regular.ttf');}
.contenedor {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #1e1e20;
    border-top: solid 1px #434343;
    border-bottom: solid 1px #434343;
    max-width: 100vw;
    height: 50em;
    margin: 0 auto;
    margin-top: 5em;
    margin-bottom: 5em;
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.5);
}

.eti {
    font-family: Raleway-Regular;
    font-weight: 700;
    color: #A5A5A5;
    max-width: 15rem;
    margin: 0 auto;
    margin-bottom: 20px;
    border: solid 1px #434343;
    background-color: #1e1e20;
    padding: 10px;
    padding-right: 15px;
    padding-left: 15px;
    border-radius: 9px;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
}

.expli {
    font-family: Raleway-Regular;
    color: white;
    font-size: 1.5rem;
    max-width: 30em;
    margin: 0 auto;
}
</style>