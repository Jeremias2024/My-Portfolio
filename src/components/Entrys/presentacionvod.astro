---
const { presvod } = Astro.props;
---

<h1>{presvod.titulo}</h1>
<p class="des">{presvod.descripcion}</p>
<div class="etiqs">
    <p class="E1">{presvod.etiqueta1}</p>
    <p class="E2">{presvod.etiqueta2}</p>
    <p class="E3">{presvod.etiqueta3}</p>
</div>
<div class="fram">
    <iframe src={presvod.source} title={presvod.title}></iframe>
</div>

<style class="Qry">
    @media (max-width: 768px) {
        .fram iframe {
    width: 20em;
    height: 20em;
    margin: 0 auto;
    border-radius: 20px;
}
.fram {
    max-width: 23em;
    margin: 0 auto;
    padding: 20px;
    border-radius: 20px;
    margin-bottom: 7em;
}
h1 {
    font-size: 1.5rem;
    -webkit-text-stroke: 1px white;
}
.des {
    max-width: 40em;
    font-size: 0.9rem;
    margin: 0 auto;
    margin-bottom: 1.5em;
}

}
</style>

<style class="tides">
	@font-face {
		font-family: 'Raleway-ExtraBold';
		src: url('../Assets/Raleway-ExtraBold.ttf');
}
	h1 {
		font-size: 4rem;
		font-family: 'Raleway-ExtraBold';
		font-weight: bolder;
		color: white;
		-webkit-text-stroke: 3px white;
		letter-spacing: 8px;
		text-align: center;
		text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
}
    .des {
		color: white;
        max-width: 40em;
		font-family: Raleway-Regular;
		font-size: 1rem;
		text-align: center;
		text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        margin: 0 auto;
		margin-bottom: 1.5em;
}
    .etiqs {
        display: flex;
        max-width: 23em ;
        margin: 0 auto;
        margin-bottom: 5em;
        justify-content: space-between;
        align-items: center;
        font-family: Raleway-Regular;
        font-weight: 700;
        color: #A5A5A5;
}
    .E1 {
    border: solid 1px #434343;
    background-color: #1e1e20;
    padding: 7px;
    border-radius: 9px;
    box-shadow: inset 0px 0px 5px rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease-in-out;
}

.E1:hover {
    border: solid 1px #405FA7;
}
    .E2 {      
    border: solid 1px #434343;
    background-color: #1e1e20;
    padding: 7px;
    border-radius: 9px;
    box-shadow: inset 0px 0px 5px rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease-in-out;
}
.E2:hover {
    border: solid 1px #405FA7;
}

    .E3 {
    border: solid 1px #434343;
    background-color: #1e1e20;
    padding: 7px;
    border-radius: 9px;
    box-shadow: inset 0px 0px 5px rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease-in-out;
}
.E3:hover {
    border: solid 1px #405FA7;
}

.fram {
    max-width: 60em;
    max-height: 50em auto;
    margin: 0 auto;
    padding: 30px;
    border: solid 1px #434343;
    background-color: #1e1e20;
    border-radius: 20px;
    box-shadow: inset 0px 0px 7px rgba(0, 0, 0, 0.5);
    margin-bottom: 7em;
    transition: all 0.3s ease-in-out;
}

.fram iframe {
    width: 55em;
    height: 20em;
    margin: 0 auto;
    border-radius: 20px;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
    border: solid 1px #434343;
    transition: all 0.3s ease-in-out;
}

.fram:hover img{
    border: solid 1px #405FA7;
}

.fram:hover {
    border: solid 1px #405FA7;

}

</style>