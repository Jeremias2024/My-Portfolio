<style class="Q3">
	@media (max-width: 1025px) {
	
	}
	@media (max-width: 881px) {
	
	}
	@media (max-width: 768px) {
		h1 {
			font-size: 1.5rem;
			-webkit-text-stroke: 1px white;
			letter-spacing: 3px;
	
		}
	
		p {
			font-size: 1rem;
			margin: 0 auto;
			padding: 0;
			margin-bottom: 3em;
			max-width: 20em;
		}
	}
	</style>

<style>
	@font-face {
        font-family: 'Raleway-ExtraBold' ;
        src: url('/Assets/Raleway-ExtraBold.ttf');}
@font-face {
        font-family: "Raleway-Regular";
        src: url('/Assets/Raleway-Regular.ttf');}
	h1 {
		font-size: 5rem;
		font-family: 'Raleway-ExtraBold';
		font-weight: bolder;
		color: white;
		-webkit-text-stroke: 3px white;
		letter-spacing: 8px;
		text-align: center;
		text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
	}

	p {
		color: white;
		font-family: Raleway-Regular;
		font-size: 1.3rem;
		text-align: center;
		text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
		margin-bottom: 5em;
	}
</style>
    
</DefaultLayout>